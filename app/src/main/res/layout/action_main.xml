<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_bind_auto_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bind AutoService" />

    <Button
        android:id="@+id/btn_bind_custom_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bind CustomService"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_bind_messenger_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bind MessengerService"
        android:layout_marginTop="10dp"/>
</LinearLayout>